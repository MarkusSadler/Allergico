<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/background"
    android:paddingTop="20dp">

        <TextView
                android:id="@+id/header"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"/>

        <EditText
                android:id="@+id/firstname"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:singleLine="true"
                android:hint="Vorname"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/header"
                android:layout_toLeftOf="@+id/lastname" />

        <EditText
                android:id="@+id/lastname"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Nachanme"
                android:layout_marginTop="10dp"
                android:layout_below="@id/header"
                android:layout_alignParentRight="true" />

        <EditText
                android:id="@+id/mailAdress"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:singleLine="true"
                android:layout_below="@id/lastname"
                android:layout_marginTop="10dp"
                android:hint="E-Mail"/>

        <Button
                android:id="@+id/datePicker"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_gravity="right"
                android:text="Geburtstag"
                android:layout_marginTop="10dp"
                android:layout_below="@id/mailAdress"
                android:background="#00BFFF"/>

        <TextView
                android:id="@+id/datDisplay"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content"
                android:layout_width="175dp"
                android:singleLine="true"
                android:layout_below="@id/mailAdress"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="190dp"
                android:textAlignment="center"
                android:text="Bitte auswählen"
                android:textColor="@color/background_material_dark" />

        <EditText
                android:id="@+id/username"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:singleLine="true"
                android:layout_below="@id/datePicker"
                android:layout_marginTop="10dp"
                android:hint="Benutzername"/>

        <EditText
                android:id="@+id/password"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:singleLine="true"
                android:hint="Passwort"
                android:layout_below="@id/username"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"/>

        <EditText
                android:id="@+id/passwordRepeat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Passwort wiederholen"
                android:layout_below="@id/password"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"/>

        <Button
                android:id="@+id/submit"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_gravity="right"
                android:text="Registrieren"
                android:layout_marginTop="10dp"
                android:layout_below="@id/passwordRepeat"
                android:background="#00FF80"/>

        <Button
                android:id="@+id/reset"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_gravity="right"
                android:text="Zurücksetzen"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/passwordRepeat"
                android:background="#FAAC58"/>
</RelativeLayout>
